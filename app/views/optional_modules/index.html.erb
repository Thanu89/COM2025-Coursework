<body>
  <section class="module">
    <div class="row">
      <h2 class="modules">Optional Modules</h2>
    </div>
    <div class="row">
      <% @optional_modules.each do |optional_module| %>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= optional_module.name %></h4>
          <p class="card-text"><%= optional_module.description %></p>
          <%= button_to 'Enrol', {remote: true, method: :get}%>
        </div>
        <br/>
      </div>
      <% end %>
    </div>
  </section>
</body>